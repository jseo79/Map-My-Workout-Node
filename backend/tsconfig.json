{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["es6"],
		"types": ["node"],
		"module": "commonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": ".",
		"jsx": "react",
		"outDir": "backend/dist"
	},
	"include": ["backend/src/modules/**/*", "backend/main.ts"]
}
